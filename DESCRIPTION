Package: tlda
Title: Tools for Language Data Analysis
Version: 0.1.0.9000
Authors@R: c(
    person("Lukas", "Soenning", 
      email = "lukas.soenning@uni-bamberg.de", 
      role = c("aut", "cre", "cph"),
      comment = c(ORCID = "0000-0002-2705-395X")),
